# Source server SSH
SOURCE_HOST=source.example.com
SOURCE_PORT=22
SOURCE_USER=username
SOURCE_SSH_KEY=/path/to/source_key.pem
# (Alternatively, use SOURCE_SSH_PASS=yourpassword for password auth)

# Target server SSH
TARGET_HOST=target.example.com
TARGET_PORT=22
TARGET_USER=username
TARGET_SSH_KEY=/path/to/target_key.pem
# (Alternatively, TARGET_SSH_PASS=targetpassword)

# Database credentials (old and new)
DB_SOURCE_NAME=olddbname
DB_SOURCE_USER=dbuser
DB_SOURCE_PASS=dbpassword
DB_TARGET_NAME=newdbname
DB_TARGET_USER=dbuser2
DB_TARGET_PASS=dbpassword2

# Tasks to run (true/false)
RUN_WEBSITE=true
RUN_MAIL=true
RUN_DB=true

# Modes
DRY_RUN=false     # if true, no actions are performed; only logs
DEBUG=false       # if true, verbose logging is enabled
